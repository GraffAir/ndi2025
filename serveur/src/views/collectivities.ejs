    <style>
        /* --- DESIGN SYSTEM "NUIT PROFONDE" --- */
        :root {
            --primary-violet: #764ba2;
            --secondary-blue: #667eea;
            --accent-pink: #f093fb;
            --bg-dark: #05040a;
            --text-main: #f3f4f6;
            --text-muted: #d1d5db;
            
            /* Styles des blocs en verre */
            --glass-bg: rgba(30, 20, 60, 0.7);
            --glass-border: rgba(139, 92, 246, 0.2);
            --card-hover-border: rgba(240, 147, 251, 0.5);
        }

        * { margin: 0; padding: 0; box-sizing: border-box; }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, 'Inter', sans-serif;
            background-color: var(--bg-dark);
            color: var(--text-main);
            line-height: 1.7;
            min-height: 100vh;
            padding-bottom: 80px;
        }

        /* Arrière-plan d'ambiance */
        .ambient-glow {
            position: fixed;
            top: 0; left: 0; width: 100%; height: 100%;
            background:
                radial-gradient(circle at 5% 10%, rgba(118, 75, 162, 0.08) 0%, transparent 40%),
                radial-gradient(circle at 95% 90%, rgba(102, 126, 234, 0.05) 0%, transparent 40%);
            z-index: -1;
            pointer-events: none;
        }

        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 40px 24px;
        }

        /* Typography */
        h1 {
            font-size: clamp(32px, 5vw, 42px);
            font-weight: 900;
            margin-bottom: 30px;
            background: linear-gradient(135deg, #ffffff 40%, var(--accent-pink) 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            text-align: center;
        }

        h2 {
            font-size: 24px;
            font-weight: 800;
            margin: 50px 0 24px;
            color: #fff;
            padding-bottom: 10px;
            border-bottom: 1px solid rgba(139, 92, 246, 0.3);
        }

        p {
            margin-bottom: 1.5rem;
            font-size: 1.1rem;
            color: var(--text-muted);
        }
        
        .glass-panel p { color: #e5e7eb; }

        strong { color: #fff; font-weight: 600; }
        em { color: var(--accent-pink); font-style: normal; }
        
        a { color: var(--accent-pink); text-decoration: none; border-bottom: 1px dotted var(--accent-pink); transition: all 0.2s; }
        a:hover { color: #fff; border-bottom-style: solid; }

        /* --- BLOCS DE CONTENU --- */
        
        /* Intro Box */
        .intro-box {
            background: rgba(40, 30, 60, 0.6);
            border-left: 4px solid var(--accent-pink);
            padding: 32px;
            border-radius: 16px;
            margin-bottom: 40px;
            border: 1px solid var(--glass-border);
            backdrop-filter: blur(10px);
        }
        .intro-box p:last-child { margin-bottom: 0; }

        /* Panneau standard */
        .glass-panel {
            background: var(--glass-bg);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 32px;
            margin-bottom: 40px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        /* Citations / Exemples */
        .quote-card {
            background: rgba(15, 12, 28, 0.85); 
            border: 1px solid rgba(139, 92, 246, 0.15);
            border-left: 4px solid var(--secondary-blue);
            border-radius: 16px;
            padding: 24px 30px;
            margin-bottom: 24px;
            position: relative;
            transition: all 0.3s ease;
            box-shadow: 0 4px 20px rgba(0,0,0,0.4);
        }

        .quote-card:hover {
            transform: translateX(5px);
            border-left-color: var(--accent-pink);
            background: rgba(20, 16, 35, 0.95);
            border-color: rgba(240, 147, 251, 0.3);
        }

        blockquote {
            margin: 0;
            font-size: 1.05rem;
            color: #ffffff;
            font-style: italic;
            position: relative;
            z-index: 1;
        }

        .cite-source {
            display: block;
            margin-top: 12px;
            font-size: 0.9rem;
            color: var(--accent-pink);
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            opacity: 0.9;
            font-style: normal;
        }

        /* Responsive */
        @media (max-width: 768px) {
            .container { padding: 30px 20px; }
            h1 { font-size: 32px; }
            .glass-panel, .intro-box { padding: 24px; }
        }

