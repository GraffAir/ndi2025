        a:hover { color: #fff; }

        p { color: var(--text-muted); font-size: 1.1rem; margin-bottom: 1rem; }
        strong { color: #fff; }

        /* --- BLOCS DE CONTENU --- */

        /* Intro Box */
        .intro-box {
            background: rgba(40, 30, 60, 0.5);
            border-left: 4px solid var(--accent-pink);
            padding: 24px;
            border-radius: 12px;
            margin-bottom: 40px;
            border: 1px solid var(--glass-border);
            backdrop-filter: blur(10px);
        }

        /* Glass Panel (Conteneur Map & Liste) */
        .glass-panel {
            background: var(--glass-bg);
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px);
            border: 1px solid var(--glass-border);
            border-radius: 24px;
            padding: 32px;
            margin-bottom: 40px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        /* Map Placeholder */
        .map-placeholder {
            height: 400px;
            background: linear-gradient(135deg, #151020 0%, #0a0810 100%);
            border: 2px dashed rgba(139, 92, 246, 0.2);
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-direction: column;
            color: var(--text-muted);
            margin-top: 20px;
        }

        .map-controls a {
            font-family: monospace;
            margin-left: 8px;
            font-size: 1.1rem;
        }

        /* --- GRILLE √âCOLES --- */
        .school-grid {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
            gap: 16px;
            margin-top: 24px;
        }

        .school-card {
            display: block;
            background: rgba(255, 255, 255, 0.03);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 12px;
            padding: 20px;
            transition: all 0.3s ease;
            text-decoration: none;
        }

        .school-card:hover {
            background: rgba(255, 255, 255, 0.07);
            transform: translateY(-4px);
            border-color: var(--accent-pink);
            box-shadow: 0 10px 20px rgba(0,0,0,0.4);
        }

        .school-name {
            display: block;
            font-weight: 700;
            color: #fff;
            font-size: 1.1rem;
            margin-bottom: 6px;
        }

        .school-meta {
            display: block;
            font-size: 0.85rem;
            color: var(--text-muted);
            margin-bottom: 8px;
        }

        .school-code {
            display: inline-block;
            background: rgba(118, 75, 162, 0.3);
            padding: 2px 8px;
            border-radius: 4px;
            font-family: monospace;
            font-size: 0.8rem;
            color: #d8b4fe;
        }

        /* Pagination */
        .pagination-info {
