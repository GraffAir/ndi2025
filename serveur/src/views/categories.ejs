<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2 fw-bold text-primary">
            <%= title %>
        </h1>
        <div>
            <a href="/categories/dashboard" class="btn btn-outline-primary me-2">üìä Dashboard</a>
            <a href="/qcm/categorie/:nom" class="btn btn-primary">‚ûï Explorer QCMs</a>
        </div>
    </div>

    <!-- Filtres -->
    <div class="row mb-4">
        <div class="col-md-6">
            <form method="GET" class="d-flex gap-2">
                <input type="text" name="search" class="form-control" placeholder="Rechercher une cat√©gorie..."
                    value="<%= filters.search || '' %>">
                <button type="submit" class="btn btn-primary">üîç</button>
            </form>
        </div>
        <div class="col-md-6 text-md-end">
            <span class="badge bg-light text-dark fs-6">
                <%= total %> cat√©gories
            </span>
        </div>
    </div>

    <!-- Grille Cat√©gories -->
    <div class="row g-4">
        <% if (items.length===0) { %>
            <div class="col-12">
                <div class="text-center py-5">
                    <div class="display-5 text-muted mb-3">üè∑Ô∏è</div>
                    <h3>Aucune cat√©gorie</h3>
                    <p class="text-muted">Ajoute des cat√©gories pour organiser tes contenus !</p>
                </div>
            </div>
            <% } else { %>
                <% items.forEach(item=> { %>
                    <div class="col-lg-3 col-md-4 col-sm-6">
                        <div class="card h-100 border-0 shadow-sm category-card"
                            style="border-top: 4px solid <%= item.couleur || '#007bff' %>;">
                            <div class="card-body d-flex flex-column">
                                <div class="mb-3">
                                    <h5 class="card-title fw-bold mb-1" style="color: <%= item.couleur || '#007bff' %>">
                                        <%= item.nom %>
                                    </h5>
                                    <p class="card-text text-muted small mb-0">
                                        <%= item.description || 'Sans description' %>
                                    </p>
                                </div>

                                <div class="mt-auto">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <span class="badge bg-secondary">ID: <%= item.rowid %></span>
                                        <span class="text-muted small">
                                            <%= new Date(item.created_at).toLocaleDateString('fr-FR') %>
                                        </span>
                                    </div>
                                    <div class="d-grid gap-1">
                                        <a href="/qcm/categorie/<%= item.nom %>" class="btn btn-sm btn-outline-primary">
                                            üöÄ <%= item.qcm_count || 0 %> QCMs
                                        </a>
                                        <a href="/logiciels?cat=<%= item.nom %>"
                                            class="btn btn-sm btn-outline-secondary">
                                            üíæ <%= item.logiciel_count || 0 %> Logiciels
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <% }) %>
                        <% } %>
    </div>

    <!-- Pagination -->
    <% if (pagination && pagination.pages> 1) { %>
        <nav class="mt-5">
            <ul class="pagination justify-content-center">
                <% for(let i=1; i <=pagination.pages; i++) { %>
                    <li class="page-item <%= i === pagination.current ? 'active' : '' %>">
                        <a class="page-link"
                            href="?limit=<%= pagination.limit %>&offset=<%= (i-1)*pagination.limit %>&search=<%= filters.search || '' %>&sort=<%= sort %>&order=<%= order %>">
                            <%= i %>
                        </a>
                    </li>
                    <% } %>
            </ul>
        </nav>
        <% } %>
</div>