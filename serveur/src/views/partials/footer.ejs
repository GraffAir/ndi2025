<footer class="site-footer" aria-labelledby="footer-heading">
  <style>
    /* Footer: fond léger */
    .site-footer{
      background: linear-gradient(180deg, #f8f9fa 0%, #e9ecef 100%);
      color: #222;
      font-family: system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
      margin-top:50px;
    }

    /* Bande animée colorée en haut */
    .site-footer .top-band{
      height:6px;
      background: linear-gradient(90deg, #0066ff, #7c4dff, #0d6efd);
      background-size: 200% 100%;
      animation: band-slide 6s linear infinite;
    }
    @keyframes band-slide{
      0%{background-position:0% 50%;}
      100%{background-position:200% 50%;}
    }

    /* Plateformes (4 cartes) */
    .site-footer .platforms{
      display:flex;
      flex-wrap:wrap;
      gap:1rem;
      justify-content:center;
      padding:18px 16px;
      max-width:1200px;
      margin:0 auto;
    }
    .platform-card{
      background:#ffffff;
      border:1px solid #dee2e6;
      border-radius:10px;
      padding:12px 14px;
      min-width:200px;
      display:flex;
      align-items:center;
      gap:12px;
      transition:transform .18s ease, box-shadow .18s ease, border-color .18s ease, color .18s ease;
      text-decoration:none;
      color:inherit;
    }
    .platform-card:hover{
      transform:translateY(-8px);
      box-shadow:0 12px 30px rgba(13,110,253,0.12);
      border-color:#0d6efd;
      color:#0d6efd;
    }
    .platform-card svg{width:36px; height:36px; flex-shrink:0;}

    /* Footer main: 3 colonnes */
    .site-footer .footer-main{
      max-width:1200px;
      margin:0 auto;
      padding:24px 16px;
      display:grid;
      grid-template-columns: repeat(3, 1fr);
      gap:20px;
      align-items:start;
    }
    .footer-col h4{margin:0 0 10px 0; font-size:1rem;}
    .footer-col p, .footer-col li, .footer-col a{font-size:0.95rem; color: #333;}
    .footer-col a{color:inherit; text-decoration:none;}
    .quick-links{list-style:none; padding:0; margin:0; display:flex; flex-direction:column; gap:8px;}
    .legal small{color:#555;}

    /* Footer bottom */
    .site-footer .footer-bottom{
      max-width:1200px;
      margin:0 auto;
      padding:14px 16px;
      display:flex;
      flex-wrap:wrap;
      gap:12px;
      justify-content:space-between;
      align-items:center;
      border-top:1px solid rgba(0,0,0,0.04);
    }
    .host-info{font-size:0.9rem; color:#444;}
    .badges{display:flex; gap:8px; align-items:center;}

    .badge{
      display:inline-flex;
      align-items:center;
      gap:8px;
      background:#fff;
      border:1px solid #dee2e6;
      padding:6px 10px;
      border-radius:6px;
      font-size:0.85rem;
      color:#222;
      text-decoration:none;
    }
    .badge svg{width:18px; height:18px;}

    /* Responsive: 1 colonne sur mobile */
    @media (max-width:860px){
      .site-footer .footer-main{grid-template-columns:1fr;}
      .platforms{flex-direction:column; align-items:stretch; padding:12px;}
      .platform-card{width:100%;}
      .site-footer .footer-bottom{flex-direction:column; align-items:flex-start;}
    }
  </style>

  <div class="top-band" aria-hidden="true"></div>

  <div class="platforms" role="navigation" aria-label="Plateformes">
    <a class="platform-card" href="https://www.tchap.gouv.fr/#/welcome" title="Salon Tchap" target="_blank" rel="noopener noreferrer">
      <!-- chat icon -->
      <svg viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M21 15a2 2 0 0 1-2 2H8l-5 3V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v10z" stroke="currentColor" stroke-width="1.4" stroke-linecap="round" stroke-linejoin="round"/></svg>
      <div>
        <div style="font-weight:700">Salon Tchap</div>
        <div style="font-size:0.85rem; color:#6b7280">Forum de la démarche NIRD</div>
      </div>
    </a>

    <a class="platform-card" href="https://mastodon.mim-libre.fr/@demarchenird" title="Compte Mastodon" target="_blank" rel="noopener noreferrer">
      <!-- mastodon-style icon -->
      <svg viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M12 2c4.97 0 9 3.58 9 8v6c0 1.1-.9 2-2 2h-1l-1 2-2-2h-8c-1.1 0-2-.9-2-2V6c0-4.42 4.03-4 9-4z" stroke="currentColor" stroke-width="1.2" stroke-linejoin="round"/></svg>
      <div>
        <div style="font-weight:700">Mastodon</div>
        <div style="font-size:0.85rem; color:#6b7280">@dird</div>
      </div>
    </a>

    <a class="platform-card" href="https://forge.apps.education.fr/nird" title="GitLab" target="_blank" rel="noopener noreferrer">
      <!-- code/repo icon -->
      <svg viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M12 2l2.5 7.5L22 10l-6 4 2 7-6-4-6 4 2-7-6-4 7.5-0.5L12 2z" stroke="currentColor" stroke-width="1.2" stroke-linejoin="round"/></svg>
      <div>
        <div style="font-weight:700">GitLab</div>
        <div style="font-size:0.85rem; color:#6b7280">Forge du projet</div>
      </div>
    </a>

    <a class="platform-card" href="/distributions" title="Distributions" target="_blank" rel="noopener noreferrer">
      <!-- download icon -->
      <svg viewBox="0 0 24 24" fill="none" aria-hidden="true"><path d="M12 3v12" stroke="currentColor" stroke-width="1.6" stroke-linecap="round"/><path d="M8 11l4 4 4-4" stroke="currentColor" stroke-width="1.6" stroke-linecap="round" stroke-linejoin="round"/><rect x="3" y="17" width="18" height="4" rx="1" stroke="currentColor" stroke-width="1.2"/></svg>
      <div>
        <div style="font-weight:700">Distributions</div>
        <div style="font-size:0.85rem; color:#6b7280">Ressources et archives</div>
      </div>
    </a>
  </div>

  <div class="footer-main" role="contentinfo">
    <div class="footer-col about">
      <h4><%= __('footer.about_title') %></h4>
      <p>
        <%= __('footer.about_text') %>
      </p>
    </div>

    <div class="footer-col links">
      <h4><%= __('footer.links_title') %></h4>
      <ul class="quick-links">
        <li><a href="/"> <%= __('nav.home') %> </a></li>
        <li><a href="/distributions">Distributions</a></li>
        <li><a href="/projet">Le projet</a></li>
        <li><a href="/contact">Contact</a></li>
      </ul>
    </div>

    <div class="footer-col legal">
      <h4><%= __('footer.legal_title') %></h4>
      <p><small><%= __('footer.host_info') %></small></p>
      <p><small>Licence du squelette : MIT · Contenu : CC BY</small></p>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="host-info">Hébergé sur la Forge des communs numériques éducatifs</div>
    <div class="badges" aria-hidden="false">
      <a class="badge" href="https://opensource.org/licenses/MIT" target="_blank" rel="noopener noreferrer" title="MIT License">
        <!-- MIT icon (simple) -->
        <svg viewBox="0 0 24 24" fill="none"><path d="M4 4h16v16H4z" stroke="currentColor" stroke-width="1.2"/></svg>
        <span>MIT</span>
      </a>
      <a class="badge" href="https://creativecommons.org/licenses/by/4.0/" target="_blank" rel="noopener noreferrer" title="Creative Commons BY">
        <!-- CC BY icon (simple) -->
        <svg viewBox="0 0 24 24" fill="none"><circle cx="12" cy="8" r="3" stroke="currentColor" stroke-width="1.2"/><path d="M6 18c2-3 10-3 12 0" stroke="currentColor" stroke-width="1.2" stroke-linecap="round"/></svg>
        <span>CC BY</span>
      </a>
      <div style="margin-left:12px; font-size:0.9rem; color:#444">© 2025 DIRD</div>
    </div>
  </div>

</footer>
