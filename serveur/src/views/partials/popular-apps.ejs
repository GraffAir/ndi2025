<style>
        /* [M√äME CSS que fourni - inchang√©] */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
            background: #0f0f0f;
            color: #ffffff;
        }

        .popular-section {
            background: linear-gradient(180deg, #0f0f0f 0%, #1a1a1a 100%);
            padding: 80px 40px;
            position: relative;
        }

        .popular-container {
            max-width: 1200px;
            margin: 0 auto;
        }

        .section-header {
            text-align: center;
            margin-bottom: 56px;
        }

        .section-title {
            font-size: clamp(32px, 4vw, 42px);
            font-weight: 800;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
            margin-bottom: 16px;
        }

        .section-subtitle {
            font-size: 18px;
            color: #9ca3af;
            font-weight: 400;
        }

        .apps-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
            gap: 24px;
            margin-bottom: 48px;
        }

        .app-card {
            background: linear-gradient(135deg, rgba(255, 255, 255, 0.05), rgba(255, 255, 255, 0.02));
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 28px;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            cursor: pointer;
            position: relative;
            overflow: hidden;
        }

        .app-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            opacity: 0;
            transition: opacity 0.4s ease;
        }

        .app-card:hover::before {
            opacity: 1;
        }

        .app-card:hover {
            transform: translateY(-8px);
            border-color: rgba(102, 126, 234, 0.5);
            box-shadow: 0 20px 60px rgba(102, 126, 234, 0.2);
        }

        .app-header {
            display: flex;
            align-items: center;
            gap: 16px;
            margin-bottom: 16px;
            position: relative;
            z-index: 1;
        }

        .app-icon {
            width: 56px;
            height: 56px;
            border-radius: 14px;
            background: linear-gradient(135deg, #667eea, #764ba2);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 28px;
            flex-shrink: 0;
            box-shadow: 0 4px 16px rgba(102, 126, 234, 0.3);
        }

        .app-info {
            flex: 1;
        }

        .app-name {
            font-size: 18px;
            font-weight: 700;
            color: #ffffff;
            margin-bottom: 4px;
        }

        .app-category {
            font-size: 13px;
            color: #9ca3af;
            font-weight: 500;
        }

        .app-description {
            color: #d1d5db;
            font-size: 14px;
            line-height: 1.6;
            margin-bottom: 16px;
            position: relative;
            z-index: 1;
        }

        .app-stats {
            display: flex;
            gap: 20px;
            position: relative;
            z-index: 1;
        }

        .app-stat {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: #9ca3af;
        }

        .app-stat-icon {
            font-size: 16px;
        }

        .view-all-btn {
            display: block;
            width: fit-content;
            margin: 0 auto;
            padding: 18px 48px;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 50px;
            color: #ffffff;
            font-size: 16px;
            font-weight: 700;
            cursor: pointer;
            transition: all 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
            box-shadow: 0 8px 32px rgba(102, 126, 234, 0.3);
            text-decoration: none;
            position: relative;
            overflow: hidden;
        }

        .view-all-btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
            transition: left 0.6s;
        }

        .view-all-btn:hover::before {
            left: 100%;
        }

        .view-all-btn:hover {
            transform: translateY(-4px) scale(1.05);
            box-shadow: 0 16px 48px rgba(102, 126, 234, 0.4);
        }

        @media (max-width: 768px) {
            .popular-section {
                padding: 60px 24px;
            }

            .apps-grid {
                grid-template-columns: 1fr;
                gap: 20px;
            }

            .section-header {
                margin-bottom: 40px;
            }
        }
    </style>
        <section class="popular-section">
        <div class="popular-container">
            <div class="section-header">
                    <h2 class="section-title"><%= __('popular.title') %></h2>
                    <p class="section-subtitle">
                        <% if (totalApps) { %>
                            <%= totalApps %> apps disponibles ‚Ä¢
                        <% } %>
                        <%= __('popular.subtitle') %>
                    </p>
            </div>

            <div class="apps-grid">
                <% if (popularApps && popularApps.length > 0) { %>
                    <% popularApps.forEach(app => { %>
                        <div class="app-card">
                            <div class="app-header">
                                <div class="app-icon">
                                    <%= app.icon || 'üì±' %>
                                </div>
                                <div class="app-info">
                                    <div class="app-name">
                                        <%= app.nom %>
                                    </div>
                                    <div class="app-category">
                                        <%= app.categorie || 'Divers' %>
                                    </div>
                                </div>
                            </div>
                            <p class="app-description">
                                <%= app.description %>
                            </p>
                            <div class="app-stats">
                                <div class="app-stat">
                                    <span class="app-stat-icon">üë•</span>
                                    <span>
                                        <%= app.utilisateurs || app.downloads || 'N/A' %> utilisateurs
                                    </span>
                                </div>
                                <% if (app.note) { %>
                                    <div class="app-stat">
                                        <span class="app-stat-icon">‚≠ê</span>
                                        <span>
                                            <%= app.note %>/5
                                        </span>
                                    </div>
                                <% } %>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="app-card" style="grid-column: 1/-1; text-align: center;">
                        <p style="color: #9ca3af;"><%= __('popular.no_apps') %></p>
                    </div>
                <% } %>
            </div>

            <a href="/applications" class="view-all-btn"><%= __('popular.view_all') %></a>
        </div>
    </section>
